<section class="character-stat-block">
  <table>
    <thead>
      <tr>
        <th>STR</th>
        <th>TOU</th>
        <th>AGI</th>
        <th>WFR</th>
        <th>WFM</th>
        <th>INT</th>
        <th>PER</th>
        <th>CR</th>
        <th>CH</th>
        <th>LD</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><button class="characteristic" value="{{data.data.characteristics.str.roll}}">{{data.data.characteristics.str.roll}}</button></td>
        <td><button class="characteristic" value="{{data.data.characteristics.tou.roll}}">{{data.data.characteristics.tou.roll}}</button></td>
        <td><button class="characteristic" value="{{data.data.characteristics.agi.roll}}">{{data.data.characteristics.agi.roll}}</button></td>
        <td><button class="characteristic" value="{{data.data.characteristics.wfr.roll}}">{{data.data.characteristics.wfr.roll}}</button></td>
        <td><button class="characteristic" value="{{data.data.characteristics.wfm.roll}}">{{data.data.characteristics.wfm.roll}}</button></td>
        <td><button class="characteristic" value="{{data.data.characteristics.int.roll}}">{{data.data.characteristics.int.roll}}</button></td>
        <td><button class="characteristic" value="{{data.data.characteristics.per.roll}}">{{data.data.characteristics.per.roll}}</button></td>
        <td><button class="characteristic" value="{{data.data.characteristics.cr.roll}}">{{data.data.characteristics.cr.roll}}</button></td>
        <td><button class="characteristic" value="{{data.data.characteristics.ch.roll}}">{{data.data.characteristics.ch.roll}}</button></td>
        <td><button class="characteristic" value="{{data.data.characteristics.ld.roll}}">{{data.data.characteristics.ld.roll}}</button></td>
      </tr>
    </tbody>
  </table>
  <div class="physical-stats">
    <table>
      <thead>
        <tr>
          <th colspan="3">{{localize "mythic.characterStatBlock.mythics"}}</th>
        </tr>
        <tr>
          <th>STR</th>
          <th>TOU</th>
          <th>AGI</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{data.data.mythicCharacteristics.str.total}}</td>
          <td>{{data.data.mythicCharacteristics.tou.total}}</td>
          <td>{{data.data.mythicCharacteristics.agi.total}}</td>
        </tr>
      </tbody>
    </table>
    <table>
      <thead>
        <tr>
          <th colspan="7">{{localize "mythic.characterStatBlock.movement.title"}}</th>
        </tr>
        <tr>
          <th>{{localize "mythic.characterStatBlock.movement.half"}}</th>
          <th>{{localize "mythic.characterStatBlock.movement.full"}}</th>
          <th>{{localize "mythic.characterStatBlock.movement.charge"}}</th>
          <th>{{localize "mythic.characterStatBlock.movement.run"}}</th>
          <th>{{localize "mythic.characterStatBlock.movement.sprint"}}</th>
          <th>{{localize "mythic.characterStatBlock.movement.jump"}}</th>
          <th>{{localize "mythic.characterStatBlock.movement.leap"}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{data.data.movement.half}}</td>
          <td>{{data.data.movement.full}}</td>
          <td>{{data.data.movement.charge}}</td>
          <td>{{data.data.movement.run}}</td>
          <td>{{data.data.movement.sprint}}</td>
          <td>{{data.data.movement.jump}}</td>
          <td>{{data.data.movement.leap}}</td>
        </tr>
      </tbody>
    </table>
    <table>
      <thead>
        <tr>
          <th colspan="3">{{localize "mythic.characterStatBlock.capacity.title"}}</th>
        </tr>
        <tr>
          <th>{{localize "mythic.characterStatBlock.capacity.carry"}}</th>
          <th>{{localize "mythic.characterStatBlock.capacity.lift"}}</th>
          <th>{{localize "mythic.characterStatBlock.capacity.push"}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{data.data.carryingCapacity.carry}}</td>
          <td>{{data.data.carryingCapacity.lift}}</td>
          <td>{{data.data.carryingCapacity.push}}</td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="scaled">
    <table >
      <thead>
        <tr>
          <th colspan="2">{{localize "mythic.characterStatBlock.physical.wounds"}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>{{localize "mythic.characterStatBlock.physical.current"}}</th>
          <td style="width:30px">
            <input name="data.wounds.current" value="{{data.data.wounds.current}}" type="number" data-dtype="Number"/>
          </td>
        </tr>
        <tr>
          <th>{{localize "mythic.characterStatBlock.physical.max"}}</th>
          <td>{{data.data.wounds.max}}</td>
        </tr>
      </tbody>
    </table>
    <table >
      <thead>
        <tr>
          <th colspan="2">{{localize "mythic.characterStatBlock.physical.fatigue"}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>{{localize "mythic.characterStatBlock.physical.current"}}</th>
          <td style="width:30px">
            <input name="data.fatigue.current" value="{{data.data.fatigue.current}}" type="number" data-dtype="Number"/>
          </td>
        </tr>
        <tr>
          <th>{{localize "mythic.characterStatBlock.physical.max"}}</th>
          <td>{{data.data.fatigue.max}}</td>
        </tr>
      </tbody>
    </table>
    <table >
      <thead>
        <tr>
          <th colspan="2">{{localize "mythic.characterStatBlock.physical.luck"}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>{{localize "mythic.characterStatBlock.physical.current"}}</th>
          <td style="width:30px">
            <input name="data.luck.current" value="{{data.data.luck.current}}" type="number" data-dtype="Number"/>
          </td>
        </tr>
        <tr>
          <th>{{localize "mythic.characterStatBlock.physical.max"}}</th>
          <td>{{data.data.luck.max}}</td>
        </tr>
      </tbody>
    </table>
    <table >
      <thead>
        <tr>
          <th colspan="2">{{localize "mythic.characterStatBlock.physical.support"}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>{{localize "mythic.characterStatBlock.physical.current"}}</th>
          <td style="width:30px"><input name="data.supportPoints.current" value="{{data.data.supportPoints.current}}" type="number" data-dtype="Number"/></td>
        </tr>
        <tr>
          <th>{{localize "mythic.characterStatBlock.physical.max"}}</th>
          <td>{{data.data.supportPoints.max}}</td>
        </tr>
      </tbody>
    </table>
    <table >
      <thead>
        <tr>
          <th colspan="4">{{localize "mythic.characterStatBlock.physical.armor"}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>{{localize "mythic.characterStatBlock.physical.head"}}</th>
          <td>55</td>
          <th>{{localize "mythic.characterStatBlock.physical.chest"}}</th>
          <td>55</td>
        </tr>
        <tr>
          <th>{{localize "mythic.characterStatBlock.physical.arms"}}</th>
          <td>55</td>
          <th>{{localize "mythic.characterStatBlock.physical.legs"}}</th>
          <td>55</td>
        </tr>
      </tbody>
    </table>
    <table >
      <thead>
        <tr>
          <th colspan="4">{{localize "mythic.characterStatBlock.physical.shields"}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>{{localize "mythic.characterStatBlock.physical.current"}}</th>
          <td>175</td>
          <th>{{localize "mythic.characterStatBlock.physical.delay"}}</th>
          <td>20</td>
        </tr>
        <tr>
          <th>{{localize "mythic.characterStatBlock.physical.max"}}</th>
          <td>175</td>
          <th>{{localize "mythic.characterStatBlock.physical.charge"}}</th>
          <td>50</td>
        </tr>
      </tbody>
    </table>
  </div>
</section>