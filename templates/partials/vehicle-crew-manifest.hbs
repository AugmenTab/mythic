{{!-- gtc = doMath + system.crew.operators.length system.crew.gunners.length system.complement.active.length --}}
<div
  class="vehicle-manifest"
  {{#with (doMath "+" 1 3 1)}}
    style="grid-template-columns: repeat(min(4, {{this}}), 1fr)">
  {{/with}}
  {{!-- Operators --}}
  {{#times 1}}
    <div><b>[P1]</b> CDR Carter-A259</div>
  {{/times}}
  {{!-- Gunners --}}
  <div><b>[G1]</b> WO Emile-A239</div>
  <div><b>[G2]</b> LT SPARTAN-B312</div>
  {{!-- Active Complement --}}
  {{#times 1}}
  <div><b>[C1]</b> CTN 0452-9</div>
  {{/times}}
</div>
