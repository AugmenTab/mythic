<table class="abilities-table">
  <thead>
    <tr>
      <th colspan="3">{{localize "mythic.characterTalents.abilities.label"}}</th>
    </tr>
    <tr>
      <th>{{localize "mythic.characterTalents.abilities.name"}}</th>
      <th>{{localize "mythic.characterTalents.abilities.summary"}}</th>
      <th>{{localize "mythic.characterTalents.abilities.cost"}}</th>
    </tr>
  </thead>
  <tbody>
    {{#each abilities as |ability _|}}
      <tr>
        <td>
          <a class="postable clickable picture-name" data-item_id="{{ability._id}}">
            <img alt="{{ability.name}}" src="{{ability.img}}"/>
            <p>{{ability.name}}</p>
          </a>
        </td>
        <td>
          <div class="ability-summary">
            <p>{{ability.data.summary}}</p>
            <div>
              <a class="item-edit" data-item_id="{{ability._id}}"><i class="clickable fas fa-edit"></i></a>
              <a class="item-delete" data-item_id="{{ability._id}}"><i class="clickable fas fa-trash"></i></a>
            </div>
          </div>
        </td>
        <td>{{ability.data.cost}}</td>
      </tr>
    {{else}}
      <tr>
        <td colspan="3">{{localize "mythic.characterTalents.abilities.empty"}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
<textarea name="data.abilityNotes" placeholder="{{localize "mythic.characterTalents.abilities.notes"}}">{{data.data.abilityNotes}}</textarea>