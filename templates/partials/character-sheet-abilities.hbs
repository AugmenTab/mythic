<table class="abilities-table">
  <thead>
    <tr>
      <th colspan="3">
        {{localize "mythic.characterTalents.abilities.labels.abilities"}}
      </th>
    </tr>
    <tr>
      <th>{{localize "mythic.characterTalents.abilities.name"}}</th>
      <th>{{localize "mythic.characterTalents.abilities.summary"}}</th>
      <th>{{localize "mythic.characterTalents.abilities.cost"}}</th>
    </tr>
  </thead>
  <tbody>
    {{#each abilities as |ability _|}}
      {{> "systems/mythic/templates/partials/character-sheet-ability.hbs" ability}}
    {{else}}
      <tr>
        <td colspan="3">
          {{localize "mythic.characterTalents.abilities.empty.ability"}}
        </td>
      </tr>
    {{/each}}
  </tbody>
  <thead>
    <tr>
      <th colspan="3">
        {{localize "mythic.characterTalents.abilities.labels.racials"}}
