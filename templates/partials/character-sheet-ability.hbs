<tr>
  <td>
    <a class="postable clickable picture-name" data-item_id="{{this._id}}">
      <img alt="{{this.name}}" src="{{this.img}}"/>
      <p>{{this.name}}</p>
    </a>
  </td>
  <td>
    <div class="ability-summary">
      <p>{{this.data.summary}}</p>
      <div>
        <a class="item-edit" data-item_id="{{this._id}}"><i class="clickable fas fa-edit"></i></a>
        <a class="item-delete" data-item_id="{{this._id}}"><i class="clickable fas fa-trash"></i></a>
      </div>
    </div>
  </td>
  <td>{{this.data.cost}}</td>
</tr>