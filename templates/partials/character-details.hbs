<div class="character-details">
  <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
  <div class="basic-info">
    <div class="identity">
      <h1 id="rank">
        <input name="data.rank" type="text" value="{{data.data.rank}}" placeholder="Rank"/>
      </h1>
      <h1 id="name">
        <input name="name" type="text" value="{{actor.name}}" placeholder="Name"/>
      </h1>
      <h1 id="faction">
        <input name="data.faction" type="text" value="{{data.data.faction}}" placeholder="Faction"/>
      </h1>
    </div>
    <div class="background">
      <p>
        <input name="data.soldierType" type="text" value="{{data.data.soldierType}}" placeholder="Soldier Type"/>
      </p>
      <p>
        <input name="data.race" type="text" value="{{data.data.race}}" placeholder="Race"/>
      </p>
      <p>
        <input name="data.specialization" type="text" value="{{data.data.specialization}}" placeholder="Specialization"/>
      </p>
      <p>
        <input name="data.upbringing" type="text" value="{{data.data.upbringing}}" placeholder="Upbringing"/>
      </p>
      <p>
        <input name="data.environment" type="text" value="{{data.data.environment}}" placeholder="Environment"/>
      </p>
      <p>
        <input name="data.lifestyle" type="text" value="{{data.data.lifestyle}}" placeholder="Lifestyle"/>
      </p>
    </div>
    <div class="physical">
      <select name="data.size">
        {{#select data.data.size}}
          {{#each config.size as |name size|}}
            <option value="{{size}}">{{name}}</option>
          {{/each}}
        {{/select}}
      </select>
      <p>
        <input name="data.height" type="text" value="{{data.data.height}}" placeholder="Height"/>
      </p>
      <p>
        <input name="data.weight" type="text" value="{{data.data.weight}}" placeholder="Weight"/>
      </p>
      <p>
        <input name="data.age" type="number" value="{{data.data.age}}" placeholder="Age"/>
      </p>
      <p>
        <input name="data.gender" type="text" value="{{data.data.gender}}" placeholder="Gender"/>
      </p>
    </div>
  </div>
</div>