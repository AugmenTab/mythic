<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
    <h1>
      <input name="name" type="text" value="{{item.name}}" placeholder="Name"/>
    </h1>
  </header>
  <nav class="item-tabs tabs" data-group="primary">
    <a class="item" data-tab="basic">{{localize "mythic.weaponSheet.nav.basic"}}</a>
    <a class="item" data-tab="ammo">{{localize "mythic.weaponSheet.nav.ammo"}}</a>
    <a class="item" data-tab="mods">{{localize "mythic.weaponSheet.nav.mods"}}</a>
    <a class="item" data-tab="notes">{{localize "mythic.weaponSheet.nav.notes"}}</a>
  </nav>
  <section class="item-sheet-body">
    {{!-- Basic Info Page --}}
    <div class="tab" data-group="primary" data-tab="basic">
      {{> "systems/mythic/templates/partials/weapon-sheet-info.hbs"}}
    </div>

    {{!-- Special Ammo Page --}}
    <div class="tab" data-group="primary" data-tab="ammo">
      <p><b>Coming soon!</b></p>
    </div>

    {{!-- Modifications Page --}}
    <div class="tab" data-group="primary" data-tab="mods">
      <p><b>Coming soon!</b></p>
    </div>

    {{!-- Notes Page --}}
    <div class="tab" data-group="primary" data-tab="notes">
      {{> "systems/mythic/templates/partials/editor.hbs" content=data.data.description target="data.description" link="weaponSheet.nav.notes"}}
    </div>
  </section>
</form>