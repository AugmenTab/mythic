<div>
  <h1 class="post-header">
    <img alt="{{this.name}}" src="{{this.img}}"/>
    {{this.name}}
  </h1>
  <table>
    <thead>
      <tr>
        <th colspan="2">{{localize "mythic.educationSheet.details"}}</th>
        <th colspan="2">{{localize "mythic.educationSheet.cost"}}</th>
      </tr>
      <tr>
        <th>{{localize "mythic.educationSheet.difficulty"}}</th>
        <th>{{localize "mythic.educationSheet.type"}}</th>
        <th>+5</th>
        <th>+10</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>{{localize (concat "mythic.educationSheet.difficulties." this.system.difficulty)}}</td>
        <td>{{localize (concat "mythic.educationSheet.types." this.system.type)}}</td>
        <td>{{localnum this.system.cost.plus5}}</td>
        <td>{{localnum this.system.cost.plus10}}</td>
      </tr>
    </tbody>
  </table>
  <table>
    <thead>
      <tr>
        <th>{{localize "mythic.educationSheet.skills"}}</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="education-list-chat">
          {{#if (isEmptyDataObject this.system.skills)}}
            <div>{{localize "mythic.chat.education.empty"}}</div>
          {{else}}
            {{#each this.system.skills as |has skill|}}
              {{#if has}}
                <div>{{localize (concat "mythic.skillNames." skill)}}</div>
              {{/if}}
            {{/each}}
          {{/if}}
        </td>
      </tr>
    </tbody>
  </table>
</div>
