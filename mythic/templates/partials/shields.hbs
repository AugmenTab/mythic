<table class="item-shields" {{#unless this.has}} hidden {{/unless}}>
  <thead>
    <tr>
      <th colspan="4">{{localize "mythic.shields.label"}}</th>
    </tr>
    <tr>
      <th>{{localize "mythic.shields.label"}}</th>
      {{#each this as |values key|}}
        {{#unless (cond "||" (eq key "has") (eq key "value") (eq key "max"))}}
          <th>{{localize (concat "mythic.shields." key)}}</th>
        {{/unless}}
      {{/each}}
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>{{localize "mythic.shields.source.item"}}</td>
      {{#each this as |values key|}}
        {{#unless (cond "||" (eq key "has") (eq key "value") (eq key "max"))}}
          <td>
            <input
              style="width:60px"
              name="system.shields.{{key}}.item"
              type="number"
              data-dtype="Number"
              value="{{values.item}}"
              onfocus="this.select()"
            />
          </td>
        {{/unless}}
      {{/each}}
    </tr>
    <tr>
      <td>{{localize "mythic.shields.source.variant"}}</td>
      {{#each this as |values key|}}
        {{#unless (cond "||" (eq key "has") (eq key "value") (eq key "max"))}}
          <td>
            <input
              style="width:60px"
              name="system.shields.{{key}}.variant"
              type="number"
              data-dtype="Number"
              value="{{values.variant}}"
              onfocus="this.select()"
            />
          </td>
        {{/unless}}
      {{/each}}
    </tr>
    <tr>
      <td>{{localize "mythic.shields.source.other"}}</td>
      {{#each this as |values key|}}
        {{#unless (cond "||" (eq key "has") (eq key "value") (eq key "max"))}}
          <td>
            <input
              style="width:60px"
              name="system.shields.{{key}}.other"
              type="number"
              data-dtype="Number"
              value="{{values.other}}"
              onfocus="this.select()"
            />
          </td>
        {{/unless}}
      {{/each}}
    </tr>
  </tbody>
  <thead>
    <tr>
      <th>{{localize "mythic.shields.total"}}</th>
      {{#each this as |values key|}}
        {{#unless (cond "||" (eq key "has") (eq key "value") (eq key "max"))}}
          <th>{{values.total}}</th>
        {{/unless}}
      {{/each}}
    </tr>
  </thead>
</table>
