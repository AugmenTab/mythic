<section class="character-sheet-summary tab">
  <div>
    <h2>{{localize "mythic.characterSettings.bestiary.swarm"}}</h2>
    <table>
      <thead>
        <tr>
          <th>{{localize "mythic.characterSettings.bestiary.total"}}</th>
          <th>{{localize "mythic.characterSettings.bestiary.base"}}</th>
          <th>{{localize "mythic.characterSettings.bestiary.modifier"}}</th>
          <th>Swarms?</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><b>{{system.swarm.total}}</b></td>
          <td>{{system.swarm.base}}</td>
          <td style="width:90px">
            <input
              name="system.swarm.mod"
              type="number"
              data-dtype="Number"
              onfocus="this.select()"
              {{#unless system.swarm.willSwarm}}
                value="0"
                disabled=true
              {{else}}
                value="{{system.swarm.mod}}"
              {{/unless}}
            />
          </td>
          <td style="width:90px">
            <input
              name="system.swarm.willSwarm"
              type="checkbox"
              {{checked system.swarm.willSwarm}}
            />
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div>
    <h2>{{localize "mythic.characterSettings.bestiary.expPayoutLabel"}}</h2>
    <table>
      <thead>
        <tr>
          <th>{{localize "mythic.characterSettings.bestiary.total"}}</th>
          <th>{{localize "mythic.characterSettings.bestiary.base"}}</th>
          <th>{{localize "mythic.characterSettings.bestiary.multiplier"}}</th>
          <th>{{localize "mythic.characterSettings.bestiary.kit"}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><b>{{localnum system.experiencePayout.total}}</b></td>
          <td style="width:90px">
            <input
              name="system.experiencePayout.base"
              value="{{system.experiencePayout.base}}"
              type="number"
              data-dtype="Number"
              onfocus="this.select()"
            />
          </td>
          <td style="width:90px">
            &times;{{localnum system.experiencePayout.diffMultiplier}}
          </td>
          <td style="width:90px">
            <input
              name="system.experiencePayout.kit"
              value="{{system.experiencePayout.kit}}"
              type="number"
              data-dtype="Number"
              onfocus="this.select()"
            />
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="characteristics-settings wide">
    <h2>{{localize "mythic.characterSettings.characteristics.charLabel"}}</h2>
    <table class="characteristics-settings">
      <thead>
        <tr>
          <th>
            <i class="fas fa-biohazard"></i>
          </th>
          <th colspan="7">
            {{localize "mythic.characterSettings.characteristics.chars"}}
          </th>
          <th colspan="3">
            {{localize "mythic.characterSettings.characteristics.mythics"}}
          </th>
        </tr>
        <tr>
          <th>
            {{localize "mythic.characterSettings.characteristics.source"}}
          </th>
          <td>STR</td>
          <td>TOU</td>
          <td>AGI</td>
          <td>WFR</td>
          <td>WFM</td>
          <td>INT</td>
          <td>PER</td>
          <td>STR</td>
          <td>TOU</td>
          <td>AGI</td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{localize "mythic.characterSettings.characteristics.base"}}</td>
          {{#each actor.system.characteristics as |stat name|}}
            {{#unless (eq name "extra")}}
              <td>
                <input
                  class="calc-{{name}}"
                  name="system.characteristics.{{name}}.base"
                  value="{{stat.base}}"
                  type="number"
                  data-dtype="Number"
                  placeholder="0"
                  onfocus="this.select()"
                />
              </td>
            {{/unless}}
          {{/each}}
          {{#each actor.system.mythicCharacteristics as |stat name|}}
            {{#unless (eq name "notes")}}
              <td>
                <input
                  class="calc-mythic-{{name}}"
                  name="system.mythicCharacteristics.{{name}}.base"
                  value="{{stat.base}}"
                  type="number"
                  data-dtype="Number"
                  onfocus="this.select()"
                />
              </td>
            {{/unless}}
          {{/each}}
        </tr>
        <tr>
          <td style="height:33px">
            {{localize "mythic.characterSettings.characteristics.equipment"}}
          </td>
          <td>{{actor.system.characteristics.str.equipment}}</td>
          <td>--</td>
          <td>{{actor.system.characteristics.agi.equipment}}</td>
          {{#times 4}}
            <td>--</td>
          {{/times}}
          <td>{{actor.system.mythicCharacteristics.str.equipment}}</td>
          <td>--</td>
          <td>{{actor.system.mythicCharacteristics.agi.equipment}}</td>
        </tr>
        <tr>
          <td>{{localize "mythic.characterSettings.other"}}</td>
          {{#each actor.system.characteristics as |stat name|}}
            {{#unless (eq name "extra")}}
              <td>
                <input
                  class="calc-{{name}}"
                  name="system.characteristics.{{name}}.other"
                  value="{{stat.other}}"
                  type="number"
                  data-dtype="Number"
                  placeholder="0"
                  onfocus="this.select()"
                />
              </td>
            {{/unless}}
          {{/each}}
          {{#each actor.system.mythicCharacteristics as |stat name|}}
            {{#unless (eq name "notes")}}
              <td>
                <input
                  class="calc-mythic-{{name}}"
                  name="system.mythicCharacteristics.{{name}}.other"
                  value="{{stat.other}}"
                  type="number"
                  data-dtype="Number"
                  onfocus="this.select()"
                />
              </td>
            {{/unless}}
          {{/each}}
        </tr>
      </tbody>
      <thead>
        <tr>
          <th>{{localize "mythic.characterSettings.total"}}</th>
          {{#each actor.system.characteristics as |stat _|}}
            {{#unless (eq name "extra")}}
              <th>{{stat.total}}</th>
            {{/unless}}
          {{/each}}
          {{#each actor.system.mythicCharacteristics as |stat _|}}
            {{#unless (eq name "extra")}}
              <th>{{stat.total}}</th>
            {{/unless}}
          {{/each}}
        </tr>
      </thead>
    </table>
  </div>
  <div>
    <h2>{{localize "mythic.characterSettings.movement.label"}}</h2>
    <table>
      <thead>
        <tr>
          <th style="width:120px">
            {{localize "mythic.characterSettings.movement.jumpMultiplier"}}
          </th>
          <th style="width:120px">
            {{localize "mythic.characterSettings.movement.leapMultiplier"}}
          </th>
          <th>{{localize "mythic.characterSettings.movement.blur"}}</th>
          <th>{{localize "mythic.characterSettings.movement.rush"}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <input
              name="system.movement.jumpMultiplier"
              type="number"
              value="{{system.movement.jumpMultiplier}}"
              data-dtype="Number"
              onfocus="this.select()"
            />
          </td>
          <td>
            <input
              name="system.movement.leapMultiplier"
              type="number"
              value="{{system.movement.leapMultiplier}}"
              data-dtype="Number" onfocus="this.select()"
            />
          </td>
          <td>
            <input
              name="system.movement.blur"
              type="checkbox"
              {{checked system.movement.blur}}
            />
          </td>
          <td>
            <input
              name="system.movement.rush"
              type="checkbox"
              {{checked system.movement.rush}}
            />
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div>
    <h2>{{localize "mythic.characterSettings.wounds.label"}}</h2>
    <table>
      <thead>
        <tr>
          <th>{{localize "mythic.characterSettings.wounds.total"}}</th>
          <th>{{localize "mythic.characterSettings.wounds.base"}}</th>
          <th>{{localize "mythic.characterSettings.wounds.swarm"}}</th>
          <th>{{localize "mythic.characterSettings.wounds.mod"}}</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><b>{{system.wounds.max}}</b></td>
          <td style="width:110px">
            <input
              name="system.wounds.base"
              type="number"
              value="{{system.wounds.base}}"
              data-dtype="Number"
              onfocus="this.select()"
            />
          </td>
          <td>&times;{{system.swarm.total}}</td>
          <td style="width:110px">
            <input
              name="system.wounds.mod"
              type="number"
              value="{{system.wounds.mod}}"
              data-dtype="Number"
              onfocus="this.select()"
            />
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</section>
