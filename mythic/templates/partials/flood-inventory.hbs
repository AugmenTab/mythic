<section>
    <table>
    <thead>
      <tr>
        <th>{{localize "mythic.characterInventory.name"}}</th>
        <th>{{localize "mythic.characterInventory.carried"}}</th>
        <th>{{localize "mythic.characterInventory.equipped"}}</th>
        <th>{{localize "mythic.characterInventory.quantity"}}</th>
        <th>{{localize "mythic.characterInventory.total"}}</th>
      </tr>
    </thead>
    <thead>
      <tr>
        <th colspan="5">
          <div class="add-item-header">
            {{localize "mythic.characterInventory.weapon.label"}}
            <a class="item-create" data-item-type="weapon">
              <i class="clickable fa-solid fa-plus"></i>
            </a>
          </div>
        </th>
      </tr>
    </thead>
    <tbody class="item-list">
      {{#each weapons as |weapon|}}
        {{> "systems/mythic/templates/partials/flood-items.hbs" weapon}}
      {{else}}
        <tr>
          <td colspan="5">
            {{localize "mythic.characterInventory.weapon.empty"}}
          </td>
        </tr>
      {{/each}}
    </tbody>
    <thead>
      <tr>
        <th colspan="5">
          <div class="add-item-header">
            {{localize "mythic.characterInventory.armor.label"}}
            <a class="item-create" data-item-type="armor">
              <i class="clickable fa-solid fa-plus"></i>
            </a>
          </div>
        </th>
      </tr>
    </thead>
    <tbody class="item-list">
      {{#each armors as |armor|}}
        {{> "systems/mythic/templates/partials/flood-items.hbs" armor}}
      {{else}}
        <tr>
          <td colspan="5">
            {{localize "mythic.characterInventory.armor.empty"}}
          </td>
        </tr>
      {{/each}}
    </tbody>
    <thead>
      <tr>
        <th colspan="5">
          <div class="add-item-header">
            {{localize "mythic.characterInventory.equipment.label"}}
            <a class="item-create" data-item-type="equipment">
              <i class="clickable fa-solid fa-plus"></i>
            </a>
          </div>
        </th>
      </tr>
    </thead>
    <tbody class="item-list">
      {{#each equipment as |equip|}}
        {{> "systems/mythic/templates/partials/flood-items.hbs" equip}}
      {{else}}
        <tr>
          <td colspan="5">
            {{localize "mythic.characterInventory.equipment.empty"}}
          </td>
        </tr>
      {{/each}}
      <td colspan="5">
        <textarea
          name="system.equipmentNotes"
          placeholder="{{localize "mythic.characterInventory.equipment.notes"}}"
        >{{system.equipmentNotes}}</textarea>
      </td>
    </tbody>
    <thead>
      <tr>
        <th colspan="4">
          {{localize "mythic.characterInventory.characterTotal"}}:&nbsp;{{localnum system.carryingCapacity.character}}&nbsp;kg
        </th>
        <th>
          {{localnum system.carryingCapacity.total}}&nbsp;kg
        </th>
      </tr>
    </thead>
  </table>
</section>
