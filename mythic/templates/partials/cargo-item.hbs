<tr class="item" data-item="{{this._id}}">
  <td>
    <div class="item-name">
      <a class="item-link postable-item clickable" data-item-id="{{this._id}}">
        <img alt="{{this.name}}" src="{{this.img}}"/>
        <p>{{this.name}}</p>
      </a>
      <div class="item-management">
        <a class="item-edit" data-item-id="{{this._id}}">
          <i class="clickable fas fa-edit"></i>
        </a>
        <a class="item-delete" data-item-id="{{this._id}}">
          <i class="clickable fas fa-trash"></i>
        </a>
      </div>
    </div>
  </td>
  <td>
    <input
      class="item-edit-inline"
      data-field="weight.carried"
      data-item-id="{{this._id}}"
      type="checkbox"
      {{checked this.system.weight.carried}}
    />
  </td>
  <td>
    {{#if (eq this.type "weapon")}}
      <input
        class="item-edit-inline"
        data-field="weight.equipped"
        data-item-id="{{this._id}}"
        type="checkbox"
        {{checked this.system.weight.equipped}}
        {{#unless this.system.weight.carried}}
          disabled="true"
          aria-disabled="true"
        {{/unless}}
      />
    {{/if}}
  </td>
  <td>
    <input
      class="item-edit-inline"
      style="width:50px;"
      type="number" data-dtype="Number"
      data-item-id="{{this._id}}"
      onfocus="this.select()"
      {{#if (cond "&&" (eq this.type "weapon") (eq this.system.group "thrown"))}}
        data-field="ammoList.{{this.system.currentAmmo}}.currentMag"
        {{#with (lookup this.system.ammoList this.system.currentAmmo)}}
        value="{{this.currentMag}}"
        {{/with}}
      {{else}}
        data-field="weight.quantity"
        value="{{this.system.weight.quantity}}"
      {{/if}}
    />
  </td>
  <td>{{localnum this.system.weight.total}}&nbsp;kg</td>
</tr>
